<header>
    <div class="mobile-nav  ">
        <div class="flex h-12 p-3 border-b-2 border-blue-400 flex justify-between item-center">
            <div href="/profile" class="flex">
                <% if(user) { %>
                    <div class="mr-1 flex items-center justify-center bg-indigo-500 hover:bg-indigo-600  w-6 h-6 rounded-full ">
                        <h1 class="text-lg font-mono font-medium  text-white ">
                            <%-user.name.slice(0, 1)%>
                        </h1>
                    </div>
                    <% } else { %>
                        <div class="mr-1">
                            <span class="material-icons ">
                                account_circle
                            </span>
                        </div>
                        <% } %>
                            <div>
                                <% if(user) { %>
                                    <a href="/profile">
                                        <b class=" text-xs sm:text-base ">
                                            <%- user.name%>
                                        </b>
                                    </a>
                                    <% } else { %>
                                        <a href="/signin">
                                            <b>Sign in</b>
                                        </a>
                                        <% } %>
                            </div>
            </div>
            <div class="times">
                <span class="material-icons">
                    close
                </span>
            </div>
        </div>
        <div class="px-3">
            <ul class="list-none flex flex-col my-1 ">
                <li class="p-1 border-b border-blue-500"> <a href="/" class="font-semibold text-blue-900 hover:text-gray-900">Home</a></li>
                <% if (user && user.role==='admin' ){ %>
                    <li class="p-1 border-b border-blue-500"><a href="/admin" class="font-semibold mr-1">Dashboard</a>
                    </li>
                    <% } %>
                        <li class="p-1 border-b border-blue-500"><a href="" class="font-semibold mr-1">About</a>
                        </li>
                        <li class="p-1 border-b border-blue-500 "><a href="" class="font-semibold mr-1">Contact</a>
                        </li>
                        <li class="p-1 border-b border-blue-500"><a href="" class="font-semibold mr-1">Cart</a></li>
                        <li class="p-1 border-b border-blue-500"><a href="" class="font-semibold mr-1">Track</a>
                        </li>
            </ul>
        </div>
    </div>
    <div class="flex justify-between p-3.5 flex-wrap	border-b-2 border-blue-400 items-center ">
        <button class="hamburger  ">
            <span class="material-icons md-36  ">
                menu
            </span>
        </button>
        <h1 class="brand   text-gray-900 font-bold    text-2xl  font-sans">Aamir Enterprises</h1>
        <nav class="mx-3 middle">
            <a href="/" class="font-semibold mr-1">Home</a>
            <a href="" class="font-semibold mr-1">About</a>
            <a href="" class="font-semibold mr-1">Contact</a>
            <a href="" class="font-semibold mr-1">Cart</a>
            <a href="" class="font-semibold mr-1">Track</a>
        </nav>
