<!-- component -->
<div class="flex items-center  w-full justify-center">

    <div class="max-w-xs">
        <div class="bg-white shadow-xl rounded-lg py-3">
            <div class="photo-wrapper p-2">

                <div class=" flex items-center justify-center bg-indigo-500 hover:bg-indigo-600 mx-auto w-32 h-32 rounded-full ">
                    <h1 class="text-8xl font-mono font-medium uppercase text-white ">
                        <%-user.name.slice(0, 1)%>
                    </h1>
                </div>
            </div>
            <div class="p-2">
                <h3 class="text-center text-xl text-gray-900 font-medium leading-8">
                    <%-user.name%>
                </h3>
                <table class="text-xs my-3">
                    <tbody>
                        <tr>
                            <td class="px-2 py-2 text-gray-500 font-semibold">Email</td>
                            <td class="px-2 py-2">
                                <%-user.email%>
                            </td>
                        </tr>
                        <%if(user.verify==='true' ) { %>
                            <tr>
                                <td class="px-2 py-2 text-gray-500 font-bold ">verify</td>
                                <td class="px-2 py-2 text-indigo-600">
                                    <span class="material-icons ">
                                        check_circle
                                    </span>
                                </td>
                            </tr>
                            <%} else { %>
                                <tr>
                                    <td class="px-2 py-2  font-bold">verify </td>
                                    <td class="px-2 py-2 text-indigo-600 font-bold">
                                        <a href="/verify">verify Now</a>
                                    </td>
                                </tr>
                                <% } %>

                                    <tr>
                                        <td class="px-2 py-2 text-gray-500 font-semibold">Address</td>
                                        <td class="px-2 py-2">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="px-2 py-2 text-gray-500 font-semibold">Phone</td>
                                        <td class="px-2 py-2">?</td>
                                    </tr>

                    </tbody>
                </table>

                <div class="text-center my-3">
                    <a class="text-xs  text-red-500	 italic hover:underline hover:text-red-600 font-medium" href="#">Delete Account</a>
                </div>

            </div>
        </div>
    </div>

</div>