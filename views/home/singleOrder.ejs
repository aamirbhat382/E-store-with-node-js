<section class="status">
    <div class="container mx-auto">
        <div class="status-box w-full lg:w-2/3 mx-auto px-3">
            <div class="flex items-center justify-between mb-12 flex-wrap">
                <h1 class="text-lg font-bold">Track delivery status</h1>
                <h6 class="bg-white py-1 rounded-full sm:px-4 px-1 text-green-600 text-xs">
                    <%= order._id %>
                </h6>
                <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order) %>">
            </div>
            <ul>
                <li class="status_line text-xs md:text-xl pb-16 " data-status="order_placed"><span>Order
                        Placed</span>
                </li>
                <li class="status_line text-xs md:text-xl pb-16 " data-status="confirmed"><span>Order
                        confirmation</span>
                </li>
                <li class="status_line text-xs md:text-xl pb-16 " data-status="prepared"><span>Preparation</span>
                </li>
                <li class="status_line text-xs md:text-xl pb-16 " data-status="delivered"><span>Out for
                        delivery
                    </span>
                </li>
                <li class="status_line text-xs md:text-xl " data-status="completed"><span class="pl-2">Complete</span>
                </li>
            </ul>
        </div>
    </div>
</section>
<script src="/js/admin.js"></script>