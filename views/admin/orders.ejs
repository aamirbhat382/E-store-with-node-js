<div class="lg:w-2/3 w-full mx-auto overflow-auto mt-2">
    <table class="table-auto w-full text-left whitespace-no-wrap">
        <thead>
            <tr>
                <th class="px-4 py-3 title-font tracking-wider font-medium text-gray-900 text-sm bg-gray-100 rounded-tl rounded-bl">
                    Date</th>
                <th class="px-4 py-3 title-font tracking-wider font-medium text-gray-900 text-sm bg-gray-100">Status
                </th>
                <th class="px-4 py-3 title-font tracking-wider font-medium text-gray-900 text-sm bg-gray-100">Payment
                </th>
                <th class="px-4 py-3 title-font tracking-wider font-medium text-gray-900 text-sm bg-gray-100">Order</th>

            </tr>
        </thead>
        <tbody>
            <% orders.forEach(order=>{ %>
                <tr>
                    <td class="border-t-2 border-gray-200 px-2 py-3">
                        <%-order.createdAt.toLocaleString() %>
                    </td>
                    <td class="border-t-2 border-gray-200 px-4 py-3">
                        <%-order.status%>
                    </td>
                    <td class="border-t-2 border-gray-200 px-4 py-3">
                        <%-order.paymentStatus ? 'paid' : 'Not paid' %>
                    </td>
                    <td class="w-10 text-center border-t-2 border-gray-200 px-4 py-3">
                        <a href="/admin/orders/<%-order.id%>">View</a>
                    </td>
                </tr>
                <% })%>

        </tbody>
    </table>
</div>